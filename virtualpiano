key8 = Button(boxframe, text = 'D', width = 5, height = 15,  highlightbackground ="black", command = middled).grid(row = 0, column = 7, columnspan = 1)
key9 = Button(boxframe, text = 'E', width = 5, height = 15,  highlightbackground ="black", command = middlee).grid(row = 0, column = 8, columnspan = 1)
key10 = Button(boxframe, text = 'F', width = 5, height = 15,  highlightbackground ="black", command = middlef).grid(row = 0, column = 9, columnspan = 1)
key11 = Button(boxframe, text = 'G', width = 5, height = 15,  highlightbackground ="black", command = middleg).grid(row = 0, column = 10, columnspan = 1)
key12 = Button(boxframe, text = 'A', width = 5, height = 15,  highlightbackground ="black", command = uppera).grid(row = 0, column = 11, columnspan = 1)
key13 = Button(boxframe, text = 'B', width = 5, height = 15,  highlightbackground ="black", command = upperb).grid(row = 0, column = 12, columnspan = 1)
