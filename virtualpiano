window = Tk()
            
window.geometry('690x400')
window.resizable(0,0)
window.title('Simple Piano')
            
frame1 = Frame(window, width = 600, height = 100)
            
blackkeyframe = Frame(window, width = 600, height = 100, background = 'gray99', highlightbackground = 'brown')
blackkeyframe.pack(side = TOP)
            
boxframe = Frame(window, width = 600, height = 100, background = 'gray99', highlightbackground = 'brown')
boxframe.pack(side = BOTTOM)
        
window.configure(bg = 'black')

key1 = Button(boxframe, text = 'D', width = 5, height = 15,  highlightbackground ="black", command = lowerd).grid(row = 0, column = 0, columnspan = 1)
key2 = Button(boxframe, text = 'E', width = 5, height = 15,  highlightbackground ="black", command = lowere).grid(row = 0, column = 1, columnspan = 1)
key3 = Button(boxframe, text = 'F', width = 5, height = 15,  highlightbackground ="black", command = lowerf).grid(row = 0, column = 2, columnspan = 1)
