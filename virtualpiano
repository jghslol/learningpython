import Tkinter
import pygame
from Tkinter import *
from pygame import mixer
import numpy as np

def lowerd(): 
    file1 = open('316072__feelander__piano-mf-d3.aiff')
    mixer.init()
    mixer.music.load(file1)
    mixer.music.play()

